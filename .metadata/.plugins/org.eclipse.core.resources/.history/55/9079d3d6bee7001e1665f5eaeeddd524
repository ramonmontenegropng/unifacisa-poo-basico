package listaExercicio04;

import java.util.Scanner;

public class Main {
	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		Conta conta = new Conta();
		
		System.out.println("Insira o número da conta: ");
		conta.numeroConta = scanner.nextInt();
		
		System.out.println("Haverá depósito inicial? Tecle 1 para sim, e 2 para não.");
		conta.seletor = scanner.nextInt();
		
		if (conta.seletor == 1) {
			System.out.println("Insira o valor inicial: ");
			conta.deposito = scanner.nextDouble();
		}else if (conta.seletor == 2) {
			System.out.println("Valor definido para zero, prossiga.");
		}
		
		System.out.println("Insira um valor inicial: ");
		conta.deposito = scanner.nextDouble();
		
		scanner.close();
		
	}
}
