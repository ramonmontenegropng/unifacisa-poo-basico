package listaExercicio04;

import java.util.Scanner;

public class Main {
	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		Conta conta = new Conta();
		
		System.out.println("Insira o número da conta: ");
		conta.numeroConta = scanner.nextInt();
		
		System.out.println("Haverá depósito inicial? (S/N)");
		conta.seletor = scanner.next();
		
		if (conta.seletor == "s") {
			System.out.println("Insira o valor inicial: ");
			conta.deposito = scanner.nextDouble();
		}else if (conta.seletor == "n") {
			System.out.println("Valor definido para zero, prossiga.");
		}
		
		scanner.close();
		
	}
}
