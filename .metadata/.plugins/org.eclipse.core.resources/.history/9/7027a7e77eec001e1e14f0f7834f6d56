package listaExercicio05;

import javax.swing.JOptionPane;
import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JPanel;
import java.util.Scanner;

public class Main {
	public static void main(String[] args) {
		
		Scanner scanner = new Scanner(System.in);
		boolean sair = false;
		
        JPanel panel = new JPanel();
        JButton botaoSaque = new JButton("Saque");
        JButton botaoDeposito = new JButton("Depósito");
        panel.add(botaoSaque);
        panel.add(botaoDeposito);
		
		int numeroConta = Integer.parseInt(JOptionPane.showInputDialog(null, "Digite o número da conta: "));
		
		String nome = JOptionPane.showInputDialog(null, "Digite seu nome: ");
		
		int opcao = JOptionPane.showConfirmDialog(null, "Haverá depósito inicial? ");
		
		Conta conta = new Conta(numeroConta, nome, 0.0);
		
		if (opcao == 0) {
			
				double saldo = Integer.parseInt(JOptionPane.showInputDialog(null, "Insira o valor inicial: "));
				conta.setSaldo(saldo);

		}else if (opcao == 1) {
			
			JOptionPane.showConfirmDialog(null, "Necessário inserir algum valor inicial posteriormente.");
			
		}
		
		JOptionPane.showConfirmDialog(null, conta);
		
		while(!sair) {
			
			JOptionPane.showConfirmDialog(null, panel, JOptionPane.YES_NO_OPTION, JOptionPane.QUESTION_MESSAGE, null, new Object[]{}, null, "Deseja realizar alguma operação?");
				
			if (opcao == 0) {
				
				
				
			}else if (opcao == 2) {
				sair = true;
			}

			
		}

		scanner.close();
	}
}
