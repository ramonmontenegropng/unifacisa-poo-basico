package listaExercicio04;

import java.util.Scanner;

public class Main {
	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		Conta conta = new Conta();
		int opcao = scanner.nextInt();
		boolean sair = false;

		System.out.println("Insira o número da conta: ");
		conta.numeroConta = scanner.nextInt();
		
		System.out.println("Insira o titular da conta: ");
		conta.nome = scanner.next();
		
		System.out.println("Haverá depósito inicial? (1-sim) (2-não)");
		conta.seletor = scanner.nextInt();
		

		if (opcao == 1) {
			
			System.out.println("Insira o valor inicial: ");
			conta.saldo = scanner.nextDouble();
			
		}else if (opcao == 2) {
			
			System.out.println("Valor definido para zero, prossiga.");
			
		}else {
			
			System.out.println("Digite uma opção válida");
		}
		
		System.out.println("Dados da conta: " + conta);
		
		while (!sair) {
			
			System.out.println("Deseja realizar alguma operação? (1-sim) (2-não)");
			
			if(opcao == 1) {
				System.out.println("Qual? (1-saque) (2-depósito)");
				
				if(opcao == 1) {
					
					System.out.println("Digite o valor a ser sacado: ");
					double saque = scanner.nextDouble();
					conta.sacar(saque);
					System.out.println("Valor atualizado para: " + conta.saldo);
										
				}else if (opcao == 2) {
					System.out.println("Digite o valor a ser depositado: ");
					double deposito = scanner.nextDouble();
					conta.depositar(deposito);
					System.out.println("Valor atualizado para: " + conta.saldo);
				}
			}else if (opcao == 2) {
					sair = true;
				}
			}
		
		scanner.close();

		}		
	}
